{
  "name": "root",
  "private": true,
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "web3-backend": "sh run-backend-env.sh",
    "web3-restart": "sh restart-web3-env.sh",
    "update-uprtcl": "lerna run update-uprtcl --parallel",
    "modules": "cd js-uprtcl && npm run dev",
    "linked-thoughts": "cd linked-thoughts && npm run dev",
    "server": "cd js-uprtcl-server && npm run dev",
    "watchman": "cd blockchain-watchman-uprtcl && ( sleep 10 && npm run dev )",
    "delayed-watchman": "cd blockchain-watchman-uprtcl && ( sleep 100 && npm run dev )",
    "dev": "run-p modules linked-thoughts server delayed-watchman"
  },
  "devDependencies": {
    "lerna": "^3.22.1",
    "npm-check-updates": "^10.2.1",
    "npm-run-all": "^4.1.5"
  },
  "engines": {
    "node": ">=12 <13"
  }
}